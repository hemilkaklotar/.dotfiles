# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        separator = "  "
        color_good =     '#88b090'  
        color_degraded = '#ccdc90'  
        color_bad =      '#e89393' 
        # output_format = "i3bar"
        markup = "pango"
}

order += "disk /"
order += "battery all"
order += "load"
order += "tztime local"
order += "volume master"

battery all {
        format = "<span color='#c4a7e7'>%status %percentage %remaining %emptytime</span>"
        format_down = "No battery"
        status_chr = "󰂋"
        status_bat = "  "
        status_unk = "󰂑"
        status_full = "󱟢"
        low_threshold = 10
}

tztime local {
        format = "<span foreground='#ebbcba'> 󱑁 %time </span>"
        format_time = "%x %X"
}

load {
        format = "<span color='#9ccfd8'>  %1min </span>"
}

disk "/" {
        format = "<span color='#f6c177'> 󰆼 %avail </span>"
}

volume master {
        format = "<span color='#9ccfd8'> 󰕾 %volume </span>"
        format_muted = " 󰖁 %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
