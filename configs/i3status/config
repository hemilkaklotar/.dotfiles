# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        separator = "  "
        color_good =     '#88b090'  
        color_degraded = '#ccdc90'  
        color_bad =      '#e89393' 
        output_format = "i3bar"
}

order += "disk /"
order += "battery all"
order += "load"
order += "tztime local"
order += "volume master"

battery all {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "󰂋"
        status_bat = "󰁹"
        status_unk = "󰂑"
        status_full = "󱟢"
        # path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

volume master {
        format = "󰕾 %volume"
        format_muted = "󰖁 %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
